# Environment Variables Template
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# Deepgram API Key (for voice transcription)
REACT_APP_DEEPGRAM_API_KEY=your-deepgram-api-key

# Akeyless Configuration (for secrets management)
AKEYLESS_ACCESS_ID=your-akeyless-access-id
AKEYLESS_ACCESS_KEY=your-akeyless-access-key

# API Gateway Endpoint (populated after Pulumi deployment)
REACT_APP_API_ENDPOINT=your-api-gateway-endpoint

# Feature Flags
REACT_APP_ENABLE_VOICE=true
REACT_APP_ENABLE_TRANSLATIONS=true
REACT_APP_ENABLE_BOOKING=false

# Optional: External API Keys
OPENWEATHER_API_KEY=your-openweather-key
GOOGLE_MAPS_API_KEY=your-google-maps-key
